<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/addview_parent">


    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/addgridview_adapter_item_draweeView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/addgridview_adapter_item_linearlayout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/imaginary_back_line_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/icon_img" />

        <TextView
            android:id="@+id/addgridview_adapter_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/6"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/addgridview_adapter_item_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="60dp"
        android:src="@mipmap/delete_pic" />
</RelativeLayout>