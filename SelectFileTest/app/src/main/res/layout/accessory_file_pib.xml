<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/accessory_file_pib_mt"
    android:background="@color/white"
    android:paddingLeft="@dimen/accessory_file_pib_pl"
    android:paddingTop="@dimen/accessory_file_pib_pt">

    <TextView
        android:id="@+id/sendmessageactivity_accessory_left_tv"
        android:layout_width="@dimen/sendmessageactivity_accessory_left_tv_w"
        android:layout_height="wrap_content"
        android:text="附件"
        android:textColor="@color/c2"
        android:textSize="@dimen/sendmessageactivity_accessory_left_tv_textsize" />

    <TextView
        android:id="@+id/sendmessageactivity_accessory_pic_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"
        android:text="图片"
        android:textColor="@color/c0"
        android:textSize="@dimen/sendmessageactivity_accessory_pic_left_tv_textsize" />

    <TextView
        android:id="@+id/sendmessageactivity_accessory_pic_left_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sendmessageactivity_accessory_pic_left_num_tv_ml"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_pic_left_tv"
        android:text="(已添加0/9)"
        android:textColor="@color/c7"
        android:textSize="@dimen/sendmessageactivity_accessory_pic_left_tv_textsize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sendmessageactivity_accessory_warpgridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendmessageactivity_accessory_left_tv"
        android:layout_marginRight="@dimen/sendmessageactivity_accessory_warpgridview_right"
        android:layout_marginTop="@dimen/sendmessageactivity_accessory_warpgridview_magin_top"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"></android.support.v7.widget.RecyclerView>
    <!--<com.wdedu.k12.lecture.ui.widget.WarpGridView-->
    <!--android:id="@+id/sendmessageactivity_accessory_warpgridview"-->
