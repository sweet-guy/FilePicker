    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/sendmessageactivity_accessory_left_tv"-->
    <!--android:layout_marginRight="@dimen/sendmessageactivity_accessory_warpgridview_right"-->
    <!--android:layout_marginTop="@dimen/sendmessageactivity_accessory_warpgridview_magin_top"-->
    <!--android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"-->
    <!--android:numColumns="3"-->
    <!--android:verticalSpacing="2dp" />-->

    <TextView
        android:id="@+id/sendmessageactivity_accessory_warpgridview_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/sendmessageactivity_accessory_warpgridview"
        android:layout_marginBottom="@dimen/sendmessageactivity_accessory_warpgridview_line_magin"
        android:layout_marginTop="@dimen/sendmessageactivity_accessory_warpgridview_line_magin"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"
        android:background="@color/c7" />

    <TextView
        android:id="@+id/sendmessageactivity_accessory_file_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendmessageactivity_accessory_warpgridview_line"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"
        android:text="文件"
        android:textColor="@color/c0"
        android:textSize="@dimen/sendmessageactivity_accessory_pic_left_tv_textsize" />

    <TextView
        android:id="@+id/sendmessageactivity_accessory_file_left_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendmessageactivity_accessory_warpgridview_line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sendmessageactivity_accessory_file_left_num_tv_ml"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_file_left_tv"
        android:text="(已添加0/3)"
        android:textColor="@color/c7"
        android:textSize="@dimen/sendmessageactivity_accessory_pic_left_tv_textsize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sendmessageactivity_accessory_file_warpgridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendmessageactivity_accessory_file_left_tv"
        android:layout_marginBottom="@dimen/sendmessageactivity_accessory_file_warpgridview_mb"
        android:layout_marginRight="@dimen/sendmessageactivity_accessory_warpgridview_right"
        android:layout_marginTop="@dimen/sendmessageactivity_accessory_warpgridview_magin_top"
        android:layout_toRightOf="@+id/sendmessageactivity_accessory_left_tv"
        android:numColumns="3">

    </android.support.v7.widget.RecyclerView>
